<%= @post.title %>
<%= @post.content %>
<% @post.categories.each do |category| %>
<%= category.name %>
<% end %>

<% @post.comments.each do |comment| %>
<%= comment.content %>
<%= link_to comment.user.username , user_path(comment.user) %>
<% end %>


<%= form_for post do |f| %>
  <%= f.label "Comment" %>
  <%= f.fields_for :comments, post.comments.build do |comment| %>
    <%= comment.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
